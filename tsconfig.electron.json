{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "types": ["node"],
    "skipLibCheck": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["electron/**/*.ts"]
}
